pipeline{
    agent any

    stages{
        stage('clonar repositorio'){
            steps{
                git branch: 'main', url:'https://github.com/SrStricker/testes-api-cy.git'
            }
        }
        stage('instalar dependencias'){
            steps{
                sh 'npm install'
            }
        }
        stage('executar testes'){
            steps{
                sh 'NO_COLOR=1 npm run cy:run'
            }
        }
    }
}